<form action="/api/product" method="POST">

    <div class="form-group">
        <label for="Nombre">Nombre del Producto</label>
        <input type="text" class="form-control" value="" name="name" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="Price">Precio del Producto</label>
        <input type="number" class="form-control" value="" placeholder="Price" name="price">
    </div>
    <div class="form-group">
        <label for="category">Categoria del Producto</label>
        <select class="form-control" id="category" name="category">
            <option>Computers</option>
            <option>Phones</option>
            <option>Accesories</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Descripcion del Producto</label>
        <input type="text" class="form-control" value="" placeholder="Description" name="description">
    </div>
    <div class="form-group">
        <label for="picture">Imagen del Producto</label>
        <input type="text" class="form-control" value="" placeholder="Introduce la URL" name="picture">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<form action="/api/product/{{id}}" method="GET">

    <div class="form-group">
        <label for="Nombre">ID del producto</label>
        <input type="text" class="form-control" value="" name="productId" placeholder="product Id">
    </div>
    
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<form action="/api/product/{{id}}" method="DELETE">

    <div class="form-group">
        <label for="Nombre">ID del producto</label>
        <input type="text" class="form-control" value="" name="productId" placeholder="product Id">
    </div>
    
    <button type="submit" class="btn btn-primary">Borrar</button>
</form>